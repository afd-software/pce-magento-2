<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Afd\Pce\Block\Afd" name="afd.options" template="Afd_Pce::afd_options.phtml"
                   before="customer_address_edit"
            />
            <block class="Afd\Pce\Block\Afd" name="afd.email" template="Afd_Pce::email.phtml"
                   after="afd.options" ifconfig="afd_email/forms/checkout"
            />
            <block class="Afd\Pce\Block\Afd" name="afd.typeahead" template="Afd_Pce::typeahead.phtml"
                   after="afd.config"
                   ifconfig="afd_typeahead/forms/checkout"/>
            <block class="Afd\Pce\Block\Afd" name="afd.phone" template="Afd_Pce::phone.phtml"
                   after="afd.config" ifconfig="afd_phone/forms/checkout"
            />
            <block class="Afd\Pce\Block\Afd" name="afd.country" template="Afd_Pce::country.phtml"
                   after="afd.config" ifconfig="afd_typeahead/countries/useAdvancedCountryControl"
            />
        </referenceBlock>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="shipping-address-fieldset" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                            </item>
                                                            <item name="component" xsi:type="string">Magento_Ui/js/form/components/group</item>
                                                        </item>
                                                        <item name="customer-email" xsi:type="array">
                                                            <item name="component" xsi:type="string">
                                                                Afd_Pce/js/checkout/email
                                                            </item>
                                                        </item>
                                                        <item name="address-list" xsi:type="array">
                                                            <item name="component" xsi:type="string">
                                                                Afd_Pce/js/view/shipping-address/list
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="customer-email" xsi:type="array">
                                                            <item name="component" xsi:type="string">
                                                                Afd_Pce/js/checkout/email
                                                            </item>
                                                        </item>
                                                        <item name="afterMethods" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="billing-address-fieldset" xsi:type="array">
                                                                    <item name="children" xsi:type="array">
                                                                    </item>
                                                                    <item name="component" xsi:type="string">Magento_Ui/js/form/components/group</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>