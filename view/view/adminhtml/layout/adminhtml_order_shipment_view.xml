<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add address metadata wrapper to shipment view page -->
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" 
                   name="shipment.address.metadata.wrapper" 
                   template="Afd_Pce::order/view/metadata_wrapper.phtml"
                   ifconfig="afd_typeahead/metadata/display_in_admin">
                <container name="shipment.address.metadata.content" htmlTag="div" htmlClass="admin__page-section-content">
                    <!-- Billing address metadata -->
                    <container name="shipment.billing.address.metadata.wrapper" htmlTag="div" htmlClass="admin__page-section-item order-billing-address">
                        <block class="Magento\Framework\View\Element\Text" name="shipment.billing.address.metadata.title">
                            <arguments>
                                <argument name="text" xsi:type="string" translate="true"><![CDATA[<div class="admin__page-section-item-title"><span class="title">Billing Address Metadata</span></div>]]></argument>
                            </arguments>
                        </block>
                        <container name="shipment.billing.address.metadata.content" htmlTag="div" htmlClass="admin__page-section-item-content">
                            <block class="Afd\Pce\Block\Adminhtml\Shipment\View\AddressMetadata" 
                                   name="shipment.billing_address.metadata" 
                                   template="Afd_Pce::order/view/address_metadata.phtml">
                                <arguments>
                                    <argument name="address_type" xsi:type="string">billing</argument>
                                </arguments>
                            </block>
                        </container>
                    </container>
                    <!-- Shipping address metadata -->
                    <container name="shipment.shipping.address.metadata.wrapper" htmlTag="div" htmlClass="admin__page-section-item order-shipping-address">
                        <block class="Magento\Framework\View\Element\Text" name="shipment.shipping.address.metadata.title">
                            <arguments>
                                <argument name="text" xsi:type="string" translate="true"><![CDATA[<div class="admin__page-section-item-title"><span class="title">Shipping Address Metadata</span></div>]]></argument>
                            </arguments>
                        </block>
                        <container name="shipment.shipping.address.metadata.content" htmlTag="div" htmlClass="admin__page-section-item-content">
                            <block class="Afd\Pce\Block\Adminhtml\Shipment\View\AddressMetadata" 
                                   name="shipment.shipping_address.metadata" 
                                   template="Afd_Pce::order/view/address_metadata.phtml">
                                <arguments>
                                    <argument name="address_type" xsi:type="string">shipping</argument>
                                </arguments>
                            </block>
                        </container>
                    </container>
                </container>
            </block>
        </referenceContainer>
    </body>
</page>
