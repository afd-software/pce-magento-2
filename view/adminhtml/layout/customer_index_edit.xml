<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="head.additional">
          <block
                class="Afd\Pce\Block\Adminhtml\Css"
                name="afd.admin.css"
                before="-"
          >
              <arguments>
                  <argument name="page" xsi:type="string">adminCustomer</argument>
              </arguments>
          </block>
        </referenceContainer>
    </body>
    <referenceBlock name="content">
        <block class="Afd\Pce\Block\Afd" name="afd.config" template="Afd_Pce::afd_options.phtml" />
        <block class="Afd\Pce\Block\Afd" name="afd.email.config" template="Afd_Pce::email.phtml" />
        <block class="Afd\Pce\Block\Afd" name="afd.phone.config" template="Afd_Pce::phone.phtml" />
        <block class="Afd\Pce\Block\Afd" name="afd.email" template="Afd_Pce::admin_customer_edit.phtml" />
    </referenceBlock>
</page>