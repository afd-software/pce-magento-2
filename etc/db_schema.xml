<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="afd_quote_address_meta" resource="default" engine="innodb" comment="AFD PCE Quote Address Metadata">
        <column xsi:type="int" name="metadata_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Metadata ID"/>
        <column xsi:type="int" name="parent_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Quote Address ID"/>
        <column xsi:type="varchar" name="parent_type" length="50" nullable="false" default="quote"
                comment="Parent Type (quote, order, customer)"/>
        <column xsi:type="text" name="metadata" nullable="true" comment="Address Metadata JSON"/>
        <column xsi:type="boolean" name="is_validated" nullable="false" default="0" comment="Address Validated Flag"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="metadata_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AFD_QUOTE_ADDR_META_PARENT_ID_QUOTE_ADDR_ADDR_ID"
                    table="afd_quote_address_meta" column="parent_id" referenceTable="quote_address"
                    referenceColumn="address_id" onDelete="CASCADE"/>
        <index referenceId="AFD_QUOTE_ADDR_META_PARENT_ID" indexType="btree">
            <column name="parent_id"/>
        </index>
    </table>
    <table name="afd_order_address_meta" resource="default" engine="innodb" comment="AFD PCE Order Address Metadata">
        <column xsi:type="int" name="metadata_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Metadata ID"/>
        <column xsi:type="int" name="parent_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Order Address ID"/>
        <column xsi:type="varchar" name="parent_type" length="50" nullable="false" default="order"
                comment="Parent Type (quote, order, customer)"/>
        <column xsi:type="text" name="metadata" nullable="true" comment="Address Metadata JSON"/>
        <column xsi:type="boolean" name="is_validated" nullable="false" default="0" comment="Address Validated Flag"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="metadata_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AFD_ORDER_ADDR_META_PARENT_ID_SALES_ORDER_ADDR_ENTITY_ID"
                    table="afd_order_address_meta" column="parent_id" referenceTable="sales_order_address"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="AFD_ORDER_ADDR_META_PARENT_ID" indexType="btree">
            <column name="parent_id"/>
        </index>
    </table>
    <table name="afd_customer_address_meta" resource="default" engine="innodb" comment="AFD PCE Customer Address Metadata">
        <column xsi:type="int" name="metadata_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Metadata ID"/>
        <column xsi:type="int" name="parent_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Customer Address ID"/>
        <column xsi:type="varchar" name="parent_type" length="50" nullable="false" default="customer"
                comment="Parent Type (quote, order, customer)"/>
        <column xsi:type="text" name="metadata" nullable="true" comment="Address Metadata JSON"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
        <column xsi:type="boolean" name="is_validated" nullable="false" default="0" comment="Address Validated Flag"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="metadata_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AFD_CUST_ADDR_META_PARENT_ID_CUST_ADDR_ENTITY_ENTITY_ID"
                    table="afd_customer_address_meta" column="parent_id" referenceTable="customer_address_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="AFD_CUST_ADDR_META_PARENT_ID" indexType="btree">
            <column name="parent_id"/>
        </index>
    </table>
</schema>
