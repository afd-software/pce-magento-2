<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <!--Polyfill-->
                <value id="polyfill" type="host">polyfill.io</value>

                <!--Google-->
                <value id="google" type="host">www.google.com</value>

                <!--AFD-->
                <value id="afd" type="host">*.afd.co.uk</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <!--AFD-->
                <value id="afd" type="host">*.afd.co.uk</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="afd" type="host">pce.afd.co.uk</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>